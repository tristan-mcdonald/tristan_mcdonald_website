// this file is for global layout styles
// keep page-specific layout styles to their own files
*
*::before
*::after
    box-sizing border-box
    word-wrap break-word

// keyboard focus styles
// use a11y.js to detect keyboard input
html

    &[data-focus-source="key"] :focus
        z-index 90
        outline-offset 6px
        outline 2px solid $cl--focus

    :focus
        outline 0

body
    display flex
    flex-direction column
    align-items center
    justify-content flex-start
    min-height 100vh
    width 100%
    background-color $cl--interface--dark

.main_content
    flex 1
    display flex
    flex-direction column
    width 100%

// styles nested in this block are for a standard
// content page layout with a centered containing div
.page_content
    flex 1
    width 100%

    &__inner
        contain(flex)
        flex-direction column
        align-items flex-start

        > *:first-child
            margin-top $sp--plus-half

        > *:last-child
            margin-bottom $sp--plus-half

img
    display block
    height auto
    width auto
    max-width 100%
    vertical-align bottom
    mt()

svg
    overflow visible // fix bug in Firefox where edges of SVG display as cut
    height 100%
    max-height 100%
    width 100%
    max-width 100%

input
button
    trans()

button
    button-reset()
