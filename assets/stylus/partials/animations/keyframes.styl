@keyframes fade-in
    0%
        opacity 0
    100%
        opacity 1

@keyframes slide-left
    0%
        transform translateX(100%)
    100%
        transform translateX(0)

@keyframes action-anchor-interaction-forwards
    0%
        transform translateX(0)
    50%
        transform translateX($sp--third)
    100%
        transform translateX(0)

@keyframes action-anchor-interaction-backwards
    0%
        transform translateX(0)
    50%
        transform translateX(-($sp--third))
    100%
        transform translateX(0)
