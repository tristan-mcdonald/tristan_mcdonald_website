    font-size ($fz--base * $ratio--sml ** 3)
    font-size var(--fz-ratio-power--three)
    +above(3)
        font-size ($fz--base * $ratio--med ** 3)
        font-size var(--fz-ratio-power--three)
    +above(6)
        font-size ($fz--base * $ratio--lrg ** 3)
        font-size var(--fz-ratio-power--three)

